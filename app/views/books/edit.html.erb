
<h1>Editing Book</h1>
<%= form_with model:@book,local:true do |f| %>

     <% if @book.errors.any? %>
       <div class="alert alert-warning">
         <ul>
           <% @book.errors.full_messages.each do |message| %>
             <li><%= "error"%><%= message %></li>
           <% end %>
         </ul>
       </div>
     <% end %>

     <h4>Title</h4>
     <%= f.text_field :title %>

     <h4>Body</h4>
     <%= f.text_area :body %><br>

     <%= f.submit 'Update Book' %><br>
<% end %>
